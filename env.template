# Azure RAG Agent Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# Azure OpenAI Configuration
# ============================================
OPENAI_ENDPOINT=https://<tenant>.openai.azure.com/
OPENAI_API_VERSION=2024-02-15-preview
GPT4O_DEPLOYMENT=gpt-4o
GPT4O_MINI_DEPLOYMENT=gpt-4o-mini
EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Azure AD Authentication (automatic via DefaultAzureCredential)
# Alternatively, set AZURE_API_KEY manually:
# AZURE_API_KEY=your-azure-openai-key

# ============================================
# Azure AI Search Configuration
# ============================================
SEARCH_ENDPOINT=https://<tenant>-search.search.windows.net

# ============================================
# Cosmos DB Configuration
# ============================================
COSMOS_ENDPOINT=https://<tenant>-cosmos.documents.azure.com:443/
COSMOS_DATABASE=rag_agent

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=<tenant>-redis.redisenterprise.cache.azure.net
REDIS_PORT=10000
REDIS_SSL=true
REDIS_IS_ENTERPRISE=true

# For non-enterprise Redis:
# REDIS_HOST=<tenant>-redis.redis.cache.windows.net
# REDIS_PORT=6380
# REDIS_SSL=true
# REDIS_IS_ENTERPRISE=false

# ============================================
# Synapse Configuration
# ============================================
SYNAPSE_DSN=DRIVER={ODBC Driver 17 for SQL Server};SERVER=<tenant>-synapse.sql.azuresynapse.net;DATABASE=analytics;Authentication=ActiveDirectoryMsi

# ============================================
# Content Safety Configuration
# ============================================
CONTENT_SAFETY_ENDPOINT=https://<tenant>-safety.cognitiveservices.azure.com/

# ============================================
# Observability Configuration
# ============================================
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<your-key>;IngestionEndpoint=https://<region>.in.applicationinsights.azure.com/

# ============================================
# Application Configuration
# ============================================
PROJECT_ENV=prod
LOG_LEVEL=INFO

# ============================================
# Budget Configuration (Optional)
# ============================================
# Override default budget limits (in USD)
# BUDGET_SIMPLE=0.001
# BUDGET_MEDIUM=0.005
# BUDGET_COMPLEX=0.010
# MAX_QUERY_BUDGET=0.010

# ============================================
# Timeout Configuration (Optional)
# ============================================
# Override default timeouts (in seconds)
# TIMEOUT_SEARCH=0.5
# TIMEOUT_GRAPH=1.0
# TIMEOUT_SQL=2.0
# TIMEOUT_WEB=2.0
# TIMEOUT_TOTAL=5.0

# ============================================
# Quality Gate Configuration (Optional)
# ============================================
# Override default quality thresholds
# MIN_RESULTS=2
# MIN_CONFIDENCE=0.6
# MIN_SOURCE_TYPES=1
# MAX_REPLAN_ITERATIONS=3
